@model LojaDaMarcela.Models.Categoria
@{
    ViewData["Title"] = "Categoria";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="my-4">Categoria</h1>
<h4 class="mb-4">Excluir</h4>

<div class="card my-4 border-dark border-2 rounded-2"></div>
<div class="card col py-3">

    <div class="row">
        <div class="col-md-8 col-lg-10">
            <div class="mb-3">
                <label asp-for="Nome" class="form-label"></label>
                <input asp-for="Nome" class="form-control p-2">
            </div>
            <div class="mb-3">
                <label asp-for="Foto" class="form-label"></label>
                <input type="file" name="Arquivo" id="Arquivo"
                    class="form-control card my-4 border-dark border-2 rounded-2" accept=".jpg,.jpeg,.png,.gif,.webp">

            </div>
        </div>
        <div class="col-md-4 col-lg-2">
            <label for="Preview" class="form-label">Prévia</label>
            <img src='@(Model.Foto ?? @Url.Content("~/imagem/produto-sem-imagem.jpg"))' id="Preview" class="img-fluid">
        </div>
    </div>
    <h4 class="text-danger w-100">
        Confirma a exclusão desta Categoria?
    </h4>
    <form asp-action="Delete" method="post" class="d-flex mt-4">
        <input type="hidden" asp-for="Id">
